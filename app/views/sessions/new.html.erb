<% provide :page_title, 'Registration' %>
<% currently_at "Sign In" %>

<h1 class="mb-4">Login</h1>

<%= form_with url: session_path, local: true, data: { turbo: false } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, 'email' %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, value: params[:email], required: true, placeholder: "Enter email", class: 'form-control form-control-lg' %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, 'password' %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, required: true, class: 'form-control form-control-lg', placeholder: 'Enter your password' %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="offset-sm-2 col-sm-10">
      <div class="form-checkbox">
        <%= f.check_box :remember_me, class: 'form-check-input', value: '1' %>
        <%= f.label :remember_me, 'remember me', class: 'form-check-label' %>
      </div>
    </div>
  </div>
  
  <%= f.submit 'Sign In', class: 'btn btn-primary btn-lg' %>
  <%= link_to 'Forgot password', new_password_reset_path, class: 'btn btn-secondary' %>
<% end %>
